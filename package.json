{
  "name": "leetest-code-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run copy:assets && npm run copy:manifest",
    "build:watch": "concurrently \"vite build --watch\" \"npm run copy:manifest\"",
    "copy:assets": "cp -r src/assets/ dist/assets/",
    "copy:manifest": "cp public/manifest.json dist/",
    "extension:dev": "npm run build && echo '\nâœ… Extension built! Load the dist/ folder in Chrome Extensions (chrome://extensions/)'",
    "lint": "eslint ."
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/chrome": "^0.0.277",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vite-plugin-web-extension": "^4.1.6"
  }
}
